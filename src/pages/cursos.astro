---
import Layout from '../layouts/Layout.astro';
import PaymentModal from '../components/PaymentModal.astro';
import { Image } from 'astro:assets';
import tecnocoinsImg from '../assets/tecnocoins.jpeg';
import binanceImg from '../assets/cursos/monetizar-con-binance.png';

const courses = [
  {
    name: "Programa de Formacion En Trading en Inversiones",
    presencial: "$237,00",
    online: "$157,00",
    pregrabado: "$47,00",
    dates: "12-jul al 20-sept / 04-Oct al 22-nov",
    image: binanceImg
  },
  {
    name: "Planificacion Financiera",
    presencial: "$38,99",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "4-oct / 13-dic",
    image: binanceImg
  },
  {
    name: "5 formas de Monetizar con Binance",
    presencial: "$45,00",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "20-sep / 15-nov",
    image: binanceImg
  },
  {
    name: "Domina tu Tiempo, Domina Tu Productividad",
    presencial: "$45,00",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "6-sep",
    image: binanceImg
  },
  {
    name: "Marketing y Redes Sociales",
    presencial: "$45,00",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "18-oct",
    image: binanceImg
  },
  {
    name: "NeuroVentas",
    presencial: "$45,00",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "1-nov",
    image: binanceImg
  },
  {
    name: "Facebook ADS",
    presencial: "$45,00",
    online: "$30,00",
    pregrabado: "$26,00",
    dates: "",
    image: binanceImg
  },
  {
    name: "Binance P2P",
    presencial: "$119,00",
    online: "$78,50",
    pregrabado: "$35,00",
    dates: "",
    image: binanceImg
  }
];
---

<Layout>
  <section class="w-full flex flex-col items-center justify-center py-12 px-4 bg-[#f6fbfd]">
    <h1 class="text-2xl md:text-3xl font-bold text-[#2A6F97] mb-2 text-center">Nuestros Cursos</h1>
    <div class="w-16 h-1 bg-[#4B8BBE] rounded mx-auto mb-8"></div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full max-w-6xl">
      {courses.map((course) => (
        <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center border border-[#eaf6fb] hover:scale-105 transition-transform">
          <Image src={course.image} alt={course.name} class="w-32 h-32 object-cover rounded-xl mb-4" />
          <h3 class="text-xl font-bold text-[#2A6F97] mb-2">{course.name}</h3>
          <div class="mb-2 space-y-1 text-sm">
            <p class="text-[#4B8BBE] font-semibold">Presencial: {course.presencial}</p>
            <p class="text-[#4B8BBE] font-semibold">Online: {course.online}</p>
            <p class="text-[#4B8BBE] font-semibold">Pregrabado: {course.pregrabado}</p>
          </div>
          {(course.dates && false) && (
            <p class="text-[#2A6F97] text-xs mb-4">Fechas: {course.dates}</p>
          )}
          <button 
            class="bg-[#4B8BBE] text-white font-bold py-2 px-6 rounded-lg shadow hover:bg-[#2A6F97] transition mt-auto"
            data-course-button
            data-course-title={course.name}
            data-course-price={course.presencial}
          >
            Quiero este curso
          </button>
        </div>
      ))}
    </div>
  </section>
  
  <PaymentModal courseTitle="" coursePrice="" />
</Layout> 