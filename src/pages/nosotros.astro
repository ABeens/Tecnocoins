---
import Layout from '../layouts/Layout.astro';
---

<Layout>	
	<!-- Ubicación y Contacto -->
	<section class="py-8 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl md:text-4xl font-bold text-center text-[#2A6F97] mb-8">¿Dónde Estamos?</h2>
			
			<div class="grid md:grid-cols-2 gap-8 items-center">
				<!-- Información de Contacto -->
				<div class="space-y-6">
					<div class="bg-white rounded-2xl p-6 shadow-lg">
						<h3 class="text-2xl font-bold text-[#2A6F97] mb-4">Oficinas Principales</h3>
						
						<div class="space-y-4">
							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-gradient-to-r from-[#2A6F97] to-[#4B8BBE] rounded-full flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-900 mb-2">Caracas, Venezuela</h4>
									<p class="text-gray-600">Carrera 11 #93-67, Oficina 302<br>Chacaito.</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-gradient-to-r from-[#2A6F97] to-[#4B8BBE] rounded-full flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-900 mb-2">Teléfono</h4>
									<p class="text-gray-600">+57 1 234-5678<br>+57 300 123-4567</p>
								</div>
							</div>

							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-gradient-to-r from-[#2A6F97] to-[#4B8BBE] rounded-full flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
									</svg>
								</div>
								<div>
									<h4 class="font-semibold text-gray-900 mb-2">Email</h4>
									<p class="text-gray-600">info@tecnocoins.com<br>contacto@tecnocoins.com</p>
								</div>
							</div>
						</div>
					</div>

					<div class="bg-white rounded-2xl p-6 shadow-lg">
						<h3 class="text-2xl font-bold text-[#2A6F97] mb-4">Horarios de Atención</h3>
						<div class="space-y-3">
							<div class="flex justify-between">
								<span class="text-gray-600">Lunes - Viernes:</span>
								<span class="font-semibold">8:00 AM - 6:00 PM</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gray-600">Sábados:</span>
								<span class="font-semibold">9:00 AM - 2:00 PM</span>
							</div>
							<div class="flex justify-between">
								<span class="text-gray-600">Domingos:</span>
								<span class="font-semibold">Cerrado</span>
							</div>
						</div>
					</div>
				</div>

				<!-- Mapa/Imagen -->
				<div class="bg-white rounded-2xl p-6 shadow-lg">
					<div class="aspect-video bg-gradient-to-br from-[#2A6F97] to-[#4B8BBE] rounded-xl flex items-center justify-center">
						<div class="text-center text-white">
							<svg class="w-16 h-16 mx-auto mb-4 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
							<p class="text-lg font-semibold">Caracas, Venezuela</p>
							<p class="opacity-90">Chacaito</p>
						</div>
					</div>
					<div class="mt-4 text-center">
						<a href="https://maps.google.com" target="_blank" class="inline-flex items-center gap-2 bg-gradient-to-r from-[#2A6F97] to-[#4B8BBE] text-white px-6 py-3 rounded-full hover:shadow-lg transition-shadow">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
							</svg>
							Ver en Google Maps
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>